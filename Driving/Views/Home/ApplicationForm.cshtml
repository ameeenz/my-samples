@model Driving.Models.Entity.ApplicationFormEntity
@{
    ViewBag.Title = "ApplicationForm";
    Layout = "~/Views/Shared/" + ViewBag.Setting.Layout;

<!-- Breadcrumb Begin -->
<div class="breadcrumb-option">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb__links">
                    <a href="./index.html"><i class="fa fa-home"></i> Home</a>
                    <a href="#">Pages</a>
                    
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Breadcrumb End -->
<!-- Pricing Section Begin -->
<section class="pricing pricing--page spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title center-title">
                    <span>Get Special Offer</span>
                    <h2>Our Pricing</h2>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-4 col-md-6 col-sm-6">
                <div class="pricing__item">
                    <div class="pricing__item__title">
                        <span>20% off</span>
                        <h2>$ 199</h2>
                        <h5>Personal Driving</h5>
                    </div>
                    <ul>
                        <li>Full course theory</li>
                        <li>Full driving course</li>
                        <li>Training in first aid</li>
                        <li>Practical sessions</li>
                        <li>Psychological support</li>
                    </ul>
                    <a href="#" class="primary-btn second-bg">get Started</a>
                </div>
            </div>
            <div class="col-lg-4 col-md-6 col-sm-6">
                <div class="pricing__item">
                    <div class="pricing__item__title">
                        <span>20% off</span>
                        <h2>$ 379</h2>
                        <h5>Power Booster</h5>
                    </div>
                    <ul>
                        <li>Full course theory</li>
                        <li>Full driving course</li>
                        <li>Training in first aid</li>
                        <li>Practical sessions</li>
                        <li>Psychological support</li>
                    </ul>
                    <a href="#" class="primary-btn second-bg">get Started</a>
                </div>
            </div>
            <div class="col-lg-4 col-md-6 col-sm-6">
                <div class="pricing__item">
                    <div class="pricing__item__title">
                        <span>20% off</span>
                        <h2>$ 259</h2>
                        <h5>Freight Driving</h5>
                    </div>
                    <ul>
                        <li>Full course theory</li>
                        <li>Full driving course</li>
                        <li>Training in first aid</li>
                        <li>Practical sessions</li>
                        <li>Psychological support</li>
                    </ul>
                    <a href="#" class="primary-btn second-bg">get Started</a>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Pricing Section End -->
<!-- Application Form Section Begin -->
<section class="application-form pricing--page spad">
    <div class="container">
        <div class="application__form__content">
            <div class="row">
                <div class="col-lg-12">
                    <div class="section-title center-title">
                        <span>@ViewBag.Message</span>
                        <h2>Application Form</h2>
                    </div>
                </div>
            </div>
            @using (Html.BeginForm())
            {
                <div class="row">
                    <div class="col-lg-4 col-md-4 col-sm-6">
                        @Html.ValidationMessageFor(it=>it.FullName)
                        @Html.TextBoxFor(it => it.FullName, new { placeholder = "Your name" })
                    </div>
                    <div class="col-lg-4 col-md-4 col-sm-6">
                        @Html.ValidationMessageFor(it => it.Email)
                        @Html.TextBoxFor(it => it.Email, new { placeholder = "Your email" })
                    </div>
                    <div class="col-lg-4 col-md-4 col-sm-6">
                        @Html.ValidationMessageFor(it => it.PhoneNumber)
                        @Html.TextBoxFor(it => it.PhoneNumber, new { placeholder = "Your phone" })
                    </div>
                    <div class="col-lg-4 col-md-4 col-sm-6">
                        @Html.ValidationMessageFor(it => it.BirthDate)
                        @Html.TextBoxFor(it => it.BirthDate, new { placeholder = "Date & time", Class = "datepicker_pop" })
                    </div>
                    <div class="col-lg-4 col-md-4 col-sm-6">
                        @Html.ValidationMessageFor(it => it.Course_Id)
                        @Html.DropDownListFor(it => it.Course_Id, (IEnumerable<SelectListItem>)ViewBag.Course_Id)
                    </div>
                    <div class="col-lg-4 col-md-4 col-sm-6">
                        @Html.ValidationMessageFor(it => it.Car_Id)
                        @Html.DropDownListFor(it => it.Car_Id, (IEnumerable<SelectListItem>)ViewBag.Car_Id)
                    </div>
                    <div class="col-lg-12 text-center">
                        <button type="submit" class="site-btn second-bg">SEND INQUIRY</button>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
<!-- Application Form Section End -->
@section Scripts
{
    @Scripts.Render("~/Ct/validation")
    }
